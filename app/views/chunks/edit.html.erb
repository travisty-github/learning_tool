<div class="col-md-6 col-md-offset-3">
  <%= form_for @chunk, url: subject_chunk_path do |f| %>
  <div class="form-group">
    <%= f.label :question %>
    <%= f.text_area :question, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :answer %>
    <%= f.text_area :answer, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-success' %>
    <%= link_to "Cancel", subject_chunks_path(params[:subject_id]),
    class: 'btn btn-default' %>
  </div>
  <% end %>
</div>
