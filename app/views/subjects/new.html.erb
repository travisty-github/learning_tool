<div class="col-md-6 col-md-offset-3">
  <%= form_for @subject, url: subjects_path do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Subject", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
