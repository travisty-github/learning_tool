<div class="container">
  <h1>Subjects</h1>
  <% @subjects.each do |s| %>
    <div class="well">
      <h3><%= link_to s.title, subject_chunks_path(s) %> </h3>
      <%= link_to "View Chunks", subject_chunks_path(s), class: 'btn btn-default' %>
      <%= link_to "Add Chunks", new_subject_chunk_path(s), class: 'btn btn-primary' %>
      <%= link_to "Take Test", test_path(s), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
